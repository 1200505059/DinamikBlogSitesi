@model List<DinamikBlogSite.Models.Entity.TBLCARDS>
@{
    ViewBag.Title = "Cards";
    Layout = "~/Views/Shared/_AdminLAyout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #333;
        color: #ddd;
        margin: 0;
        padding: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table, .table th, .table td {
            border: 1px solid #555;
        }

            .table th, .table td {
                text-align: left;
                padding: 8px;
            }

            .table th {
                background-color: #555;
            }

            .table tr:nth-child(even) {
                background-color: #444;
            }

    .btn {
        text-decoration: none;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-align: center;
        display: inline-block;
    }

    .btn-danger {
        background-color: #d9534f;
    }

    .btn-success {
        background-color: #5cb85c;
    }
</style>
<table class="table table-bordered" style="color:white;">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>AÇIKLAMA</th>
        <th>BUTON</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var card in Model)
        {
            <tr>
                <th>@card.CardID</th>
                <th>@card.CardBaslik</th>
                <th>@card.CardAciklama</th>
                <th>@card.cardButon</th>
                <th><a href="/Admin/KardSil/@card.CardID" class="btn btn-danger">SİL</a></th>
                <th><a href="/Admin/KardGuncelle/@card.CardID" class="btn btn-success">GÜNCELLE</a></th>

            </tr>

        }

    </tbody>


</table>
<a href="~/Admin/YeniKard" class="btn btn-primary">KART EKLE</a>
