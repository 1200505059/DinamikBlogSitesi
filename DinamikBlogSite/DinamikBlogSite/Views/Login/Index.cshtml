@model List<DinamikBlogSite.Models.Entity.TBLADMİN>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Karanlık Tema Admin Giriş Paneli</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #121212; /* Çok koyu gri-siyah arka plan */
            color: #e0e0e0; /* Açık gri metin rengi */
            background-image:url('/assets/img/wp2533059.jpg');
            background-position:center;
            background-repeat:no-repeat;
        }

        .login-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 360px;
            padding: 40px;
            background-color: #222; /* Koyu gri form arka planı */
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            border-radius: 10px;
        }

        h2 {
            text-align: center;
            margin-bottom: 24px;
            color: #fff; /* Beyaz başlık rengi */
        }

        .input-group {
            margin-bottom: 20px;
            position: relative;
        }

            .input-group input {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                background-color: #333; /* Daha koyu gri input arka planı */
                border: none;
                border-bottom: 2px solid #555; /* Daha koyu gri alt çizgi */
                color: #e0e0e0; /* Açık gri metin rengi */
                outline: none;
                border-radius: 5px;
            }

                .input-group input::placeholder {
                    color: #bbb; /* Daha açık gri placeholder rengi */
                }

            .input-group label {
                position: absolute;
                top: -14px;
                left: 10px;
                background-color: #222;
                padding: 0 5px;
                font-size: 14px;
                color: #bbb; /* Placeholder rengine benzer etiket rengi */
            }

        button {
            width: 100%;
            padding: 10px;
            border: none;
            background-color: #333; /* Buton için koyu gri */
            color: #e0e0e0; /* Açık gri metin rengi */
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #444; /* Butonun üzerine gelindiğinde daha açık gri */
            }
    </style>
</head>
<body>

    <div class="login-container">
        <h2>Admin Paneli Girişi</h2>
        <form method="post">
            <div class="input-group">
                <input type="text" required="required" name="AdminUserName" id="username" autocomplete="off" placeholder="Kullanıcı Adı">
            </div>
            <div class="input-group">
                <input type="password" required="required" name="AdminPassword" id="password" placeholder="Şifre">
            </div>
            <button type="submit" style="width:150px; margin-left:120px;">Giriş Yap</button>
        </form>
    </div>
   

</body>
</html>

